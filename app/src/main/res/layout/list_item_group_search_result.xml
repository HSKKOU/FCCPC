<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/search_result_list_item"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <!-- 将来的にアイコンにする? -->
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#dd2255"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:text="オーナー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/owner_name_group_search_reuslt_item"
            android:text="オーナー名"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/group_name_group_search_result_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="content"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/group_search_already_in_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textSize="10dp"
        android:textColor="#2288df"
        android:visibility="invisible"
        android:text="@string/group_add_already_added"/>
</LinearLayout>