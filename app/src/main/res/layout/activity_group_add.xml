<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fccpc.taskmanagerprototype.Main.TaskCreateFragment"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <!--group name-->
    <TextView
        android:text="@string/group_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        />
    <EditText
        android:id="@+id/group_add_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="group name"
        android:inputType="text"
        android:layout_column="1"
        android:layout_row="0"
        />

    <!--owner name-->
    <TextView
        android:text="@string/group_add_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        />
    <EditText
        android:id="@+id/group_add_input_owner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="owner name"
        android:inputType="text"
        android:layout_column="1"
        android:layout_row="0"
        />

    <!--button-->
    <Button
        android:id="@+id/search_group_button_groupadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="検索"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#222222"
        >

        <TextView
            android:id="@+id/group_search_result_num_text"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <ListView
            android:id="@+id/group_search_result_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:layout_margin="2dp"
            >
        </ListView>

    </LinearLayout>

    <!--button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/cancel_button_group_add"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="キャンセル"
            />

        <Button
            android:id="@+id/add_group_button_groupadd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="追加"
            />
    </LinearLayout>

</LinearLayout>