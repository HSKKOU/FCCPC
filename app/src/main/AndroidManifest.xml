<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.fccpc.taskmanager" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="jp.fccpc.taskmanager.Managers.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="jp.fccpc.taskmanager.Views.LogIn.LoginActivity"
            android:label="login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="jp.fccpc.taskmanager.Views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="jp.fccpc.taskmanager.Views.TaskList.TaskCreateActivity"
            android:label="@string/task_create_activity_name">
        </activity>
        <activity
            android:name="jp.fccpc.taskmanager.Views.TaskList.TaskDetailActivity"
            android:label="@string/task_detail_activity_name">
        </activity>

        <activity
            android:name="jp.fccpc.taskmanager.Views.GroupList.GroupDetailActivity"
            android:label="@string/group_detail_activity_name">
        </activity>
        <activity
            android:name="jp.fccpc.taskmanager.Views.GroupList.GroupCreateActivity"
            android:label="@string/group_create_activity_name">
        </activity>
        <activity
            android:name="jp.fccpc.taskmanager.Views.GroupList.GroupAddActivity"
            android:label="@string/group_add_activity_name">
        </activity>

    </application>

</manifest>
